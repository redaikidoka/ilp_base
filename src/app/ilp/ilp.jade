ilp-nav
div.container-fluid
  label.update.pull-right Last Updated 
    span(am-time-ago="ilp.lastUpdated" ng-show="ilp.plan.sUpdate" ) {{ilp.plan.sUpdate | fromNow}} ...
    br
    span ID#: {{ilp.student.studentid}}
  img.m-t-md.profile-pic.pull-left(ng-src="{{getStudentPhoto(ilp.student.fullpicture)}}" alt="{{ilp.student.name}}" )
  h2.m-t-md {{ilp.student.name}} in 
    em {{currentClass.name}}
  label.m-l Age: 
    em {{ilp.student.age}}
    span.m-l(ng-show="ilp.student.gender") Gender: 
      em {{ilp.student.gender}}
  label.m-l(ng-show="ilp.student.homeLanguage") Speaks at Home:
    em {{ilp.student.homeLanguage}}
  div.pull-right#classlist-display
    label(style="margin-bottom:-20px;") {{currentClass.name}}&nbsp;Students
    br
    btn-view-ilp.m-l.pull-right(student="selectedStudent" sizer='btn-xs' classid="idClass" intakedone="ilp.plan.intakeDone")
    select( ng-model="selectedStudent" ng-options="student.name for student in studentList | orderBy:'nameLast' track by student.idStudent " )
div.m-t-md#plan-nav
  nav.navbar.subnav
    ul.nav.nav-pills
      li.nav-item(ui-sref-active="active")
        a.nav-link(ui-sref="ilp.section({idSection: 1})" ) Summary&nbsp;
          i.icon.ion-alert(ng-show="!ilp.plan.intakeDone" ) &nbsp;
       li.nav-item(ui-sref-active="active")
        a.nav-link(ui-sref="ilp.goals({idSection: 9})" ) Goals
        
div(ui-view)

