ilp-nav
div.container-fluid
  h3 
    ng-pluralize( count="myclasses.classList.length" when="{'0': 'You are not associated with any classes ', 'one': 'Class ', 'other': '{} Classes '}")
    span(ng-show="myclasses.currentSchoolYear") &nbsp;for {{myclasses.currentSchoolYear}}
div.m-t-md#classnav
  nav.navbar.subnav
    ul.nav.nav-pills
      li.nav-item(ng-repeat="c in myclasses.classList" ui-sref-active="active" )
        a.nav-link(ui-sref="myclasses.class({classId: c.idClass})") {{c.className}}
div(ui-view)



